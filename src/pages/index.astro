---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Badge from "@/components/Badge.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import GitHubIcon from "@/components/icons/GitHub.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<Layout
  title="Porfolio de ncasolajimenez - Desarrollador y Programador Web con 10 años de experiencia"
  description="Contrata a ncasolajimenez para crear tu aplicación web o móvil. Desarrollador Web Full-Stack."
>
  <main class="px-4">
    <SectionContainer class="py-20 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="/ncasolajimenez.webp"
        alt="ncasolajimenez photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, soy Néstor <a
          href="https://linkedin.com/in/ncasolajimenez"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-white"
      >
        <span>10 años de experiencia.</span><span
          class="text-yellow-200"
        >
          Desarrollador Web Full-Stack</span
        >
        .<span class="text-red-200">
          De Tenerife, España</span
        >.
        <span class="text-sky-200"
          >Especializado en crear aplicaciones web.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://linkedin.com/in/ncasolajimenez">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/ncasola">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:ncasolajimenez@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          ncasolajimenez@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <ProfileCheck class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contacto">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <MailIcon class="size-7" />
        Contacto
      </h2>
      <p class="text-lg text-white/80">
        Si quieres contactar conmigo, puedes hacerlo a través de mi correo
        electrónico
        <a
          href="mailto:ncasolajimenez@gmail.com"
          class="text-sky-200"
          >
          ncasolajimenez@gmail.com
        </a>
        o a través de mi perfil de LinkedIn.
      </p>
    </SectionContainer>
  </main>
</Layout>
